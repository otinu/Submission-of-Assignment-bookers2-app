
<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/mypage-edit', user: current_user %>
     <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
     <table class="table">
      <thead>
       <tr>
        <th>    </th>
        <th>題名</th>
        <th>感想</th>
        <th colspan="3"></th>
        <th>    </th>
       </tr>
     </thead>
     <tbody>
      <% @books.each do |f| %>
       <tr>
        <td>
         <%= link_to user_path(f.user_id) do %>
         <%= attachment_image_tag f.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
         <% end %>
        </td>
        <td><%= link_to f.title, book_path(f.id) %></td>
        <td><%= f.body %></td>
        <td> コメント件数：<%= f.post_comments.count %></td>
       </td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div><!--row-->
</div><!--container-->

<h1 id="arrow_top">
  <i class="far fa-arrow-alt-circle-up fa-lg"></i>
</h1>


