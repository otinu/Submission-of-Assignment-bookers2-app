<div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/mypage-edit', user: @user %>
    <%= render 'books/newbook', book: Book %>
   </div>
   <div class="col-md-8 offset-md-1">
    <h3>Books</h3>
    <table class="table">
     <thead>
      <tr>
       <th scope="col"></th>
       <th scope="col">Title</th>
       <th scope="col">Opnion</th>
      </tr>
     </thead>
     <tbody>
      <% @user_book.each do |f| %>
       <tr>
        <td><%= link_to user_path(@user.id) do %>
             <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "40x40" %>
            <% end %>
        </td>
        <td><%= link_to f.title, book_path(f.id) %></td>
        <td><%= f.body %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div><!-- col-md-8 -->
  </div><!--row-->
</div><!--container-->
