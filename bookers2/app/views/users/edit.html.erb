<h1>User info</h1>

<%= form_with model:@user, local: true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field:profile_image, placeholder: "プロフィール画像" %>
  <br>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
　<br>
  <%= f.submit 'Update User' %>
  <br>
<% end %>