<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
     <%= form_with model:@user, local: true do |f| %>
      <h2>User info</h2>
      <h5>Name</h5>
      <%= f.text_field :name %>
      <br>
      <label for="inputImage">Image</label><br>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <br>
      <h5>Introduction</h5>
      <%= f.text_area :introduction %>
　    <br>
      <%= f.submit 'Update User' %>
      <br>
     <% end %>
  </div>
 </div>