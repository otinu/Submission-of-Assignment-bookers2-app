
<div class="container">
  <div class="row">

   <div class="col-md-4">
    <%= render 'users/mypage-edit', user: @user %>
    <%= render 'books/newbook', book: Book %>
   </div>

<div class="col-md-8">
<h3>Books</h3>
<table class="table">
  <thead>
    <tr>
     <th scope="col"></th>  <!--colspan="3"-->
     <th scope="col">Title</th>
     <th scope="col">Opnion</th>
    </tr>
  </thead>

  <tbody>

   <% @user_book.each do |f| %>
   <tr>
     <td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %></td>
     <td><%= link_to f.title, book_path(f.id) %></td>
     <td><%= f.body %></td>
   </tr>
   <% end %>
  </tbody>
</table>
</div>
</div><!--row-->
</div><!--container-->












