<h3>Books</h3>
<table>
  <thead>
    <tr>
     <th colspan="3"></th>
     <th>Title</th>
     <th>Opnion</th>
    </tr>
  </thead>

  <tbody>
   <% @book.each do |f| %>
    <tr>
     <% if f.user.id == current_user.id %>
       <td><%= attachment_image_tag f.user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></td>
       <td><%= f.title %></td>
       <td><%= f.body %></td>
     <% end %>
    </tr>
   <% end %>
  </tbody>
</table>

<%= render 'users/mypage-edit', user: @user %>
<%= render 'books/newbook', book: Book %>








