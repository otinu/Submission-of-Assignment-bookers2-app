<h3>User info</h3>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '110x110' %>

<table>
   <tr>
       <th>name</th>
       <th><%= user.name %></th>
   </tr>
   <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
   </tr>
</table>

<% if user.id == current_user.id %>
  <%= link_to edit_user_path(user.id) do %>
   <i class="fas fa-user-cog fa-3x" style="color: DarkSeaGreen;"></i><br> <!--FontAwesomeの大きさと色を変更-->
   <p>プロフィール編集</p>
  <% end %>
<% else %>
   <%= link_to edit_user_path(current_user.id) do %>
   <i class="fas fa-user-cog fa-3x" style="color: DarkSeaGreen;"></i><br>
   <p>マイページ編集へ移動</p>
   <% end %>
<% end %>

