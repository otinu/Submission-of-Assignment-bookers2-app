<div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/mypage-edit', user: @user %>
    <%= render 'books/newbook', book: Book %>
   </div>
   <div class="col-md-8 offset-md-1">
    <h3>Users</h3>
    <div class="row">
    <table class="table">
      <thead>
       <tr>
        <th scope="col">image</th>
        <th scope="col">name</th>
        <th scope="col"></th>
       </tr>
      </thead>
      <div class="row">
      <tbody>
      <% @users.each do |f| %>
       <tr>
        <td><%= attachment_image_tag f, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "50x50" %></td>
        <td><%= f.name %></td>
        <td><%= link_to "Show", user_path(f.id) %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
  </div><!-- col-lg-3 -->
 </div><!--row-->
</div><!--container-->





