<div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/mypage-edit', user: @user %>
    <%= render 'books/newbook', book: Book %>
   </div>
   <div class="col-md-8 offset-md-1">
    <table class="table">
     <h3>Users</h3>
      <thead>
       <tr>
        <th>image</th>
        <th colspan="3">name </th>
        <th colspan="3">     </th>
       </tr>
      </thead>
      <tbody>
      <% @users.each do |f| %>
       <tr>
        <td><%= attachment_image_tag f, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "40x40" %></td>
        <td colspan="3"><%= f.name %></td>
        <td colspan="3"><%= link_to "Show", user_path(f.id) %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
  </div><!-- col-lg-3 -->
 </div><!--row-->
</div><!--container-->





